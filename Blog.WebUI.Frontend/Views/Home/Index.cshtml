@using Blog.Entities
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Article> articles = ViewBag.Articles;
}

<h2>Index</h2>
<h3>Blogs Table</h3>
<div>
    @* <a href="#" title="New Blog"></a>*@
    <div class="container">
        <table class="listArticles">
            <thead>
                <tr>
                    <th>№
                    </th>
                    <th>Title
                    </th>
                    <th>AuthorId
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var article in articles)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.Title</td>
                        <td>@article.AuthorId</td>
                        <td>@Html.ActionLink("Show Article", "ShowArticle", "Home", new { title = article.Title, id = article.Id }, null)</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
