@using Blog.Entities


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Article> articles = ViewBag.Articles;
}

<style type="text/css">
    .webGrid {
        margin: 4px;
        border-collapse: collapse;
        width: 500px;
        background-color: #FCFCFC;
    }

    .header {
        background-color: #C1D4E6;
        font-weight: bold;
        color: #FFF;
    }

    .webGrid th, .webGrid td {
        border: 1px solid #C0C0C0;
        padding: 5px;
    }

    .alt {
        background-color: #E4E9F5;
        color: #000;
    }

    .gridHead a:hover {
        text-decoration: underline;
    }

    .description {
        width: auto;
    }

    .select {
        background-color: #389DF5;
    }
</style>

<h2>Index</h2>
<h3>Blogs Table</h3>

    @* <a href="#" title="New Blog"></a>*@
    <div class="container">

        <div style="margin: 0 auto; width: auto;">


            @*@{

               var obj = new WebGrid(articles);
            }
            @obj.GetHtml();*@




            <table class="listArticles">
                <thead>
                    <tr>
                        <th>
                            №
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            AuthorId
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var article in articles)
                    {
                        <tr>
                            <td>@article.Id</td>
                            <td>@article.Title</td>
                            <td>@article.AuthorId</td>
                            <td>@Html.ActionLink("Show Article", "ShowArticle", "Home", new { title = article.Title, id = article.Id, authorId = article.AuthorId }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>
