<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
    @*  <link href="~/Content/themes/bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>

</head>
<body class="">


    <div id="wrapper">
        <div id="header">
            <div id="logo">
                <img src="~/StyleImages/blogImage.jpg" height="150" alt="email image">
            </div>
            <div id="titlesPlace">
                <div id="mainTitle">
                    <h1>My Blog</h1>
                    <div id="userLabel">
                        Undefined
                    </div>
                    <div id="userLogin">
                        <img src="~/StyleImages/User-Default.jpg" height="50" alt="sign image" />
                        <ul class="sub-menu">
                            <li>@Html.ActionLink("Registration", "Registration", "Account")</li>
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                            <li>
                                @Html.ActionLink("Log out", "Registration", "Account")
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="pageTitle">
                    <h2>Page Title </h2>
                </div>
            </div>
        </div>
        <div id="main">
            <div id="menuPlace">
                <ul class="menu">
                    <li>
                        @Html.ActionLink("List Articles", "Index", "Home")
                    </li>
                    <li>
                         @Html.ActionLink("New Article", "NewArticle", "Home")
                    </li>
                </ul>
            </div>
            <div id="content">
                @RenderBody()
            </div>
        </div>
    </div>

    @*
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My Blog</p>
            </div>
        </div>
    </footer>*@
</body>
</html>
